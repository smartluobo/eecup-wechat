.wxLogin {
    width: 100%;
    height: 100%;
    font-family: PingFangSC-Regular;
    letter-spacing: 0;
    margin: 0;
}

.middleBox {
    margin: 0rpx auto;
    display: block;
    text-align: center;
    margin-top: 52rpx;
}

.headPortraits {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.wxName {
    font-size: 28rpx;
    margin-top: 12rpx;
    line-height: 40rpx;
}

.helloTxt {
    margin-top: 2rpx;
    font-size: 26rpx;
    line-height: 36rpx;
}

.noUser {
    width: 210rpx;
    height: 210rpx;
}

.loginBtn {
    width: 600rpx;
    height: 84rpx;
    font-size: 32rpx;
    line-height: 84rpx;
    border-radius: 6rpx;
    display: block;
    margin: 0rpx auto;
    text-align: center;
    outline: none;
}

button::after {
    border: none;
}

.wxBtn {
    color: #fff;
    margin-top: 168rpx;
    background: #30ad37;
}

.phoneBtn {
    color: #f2cba4;
    background-color: #fff;
    border: 2rpx solid #f2cba4;
    margin-top: 60rpx;
}

.warp {
    position: absolute;
    width: 100vw;
    height: 100vh;
    top: 0rpx;
    left: 0rpx;
    z-index: 20;
    background-color: rgba(0,0,0,0.5);
}

.show {
    display: block;
}

.hide {
    display: none;
}

.content {
    width: 540rpx;
    height: 276rpx;
    background-color: #fff;
    margin: 35vh auto;
    border-radius: 12rpx;
    font-size: 30rpx;
}

.contentText {
    text-align: center;
    height: 200rpx;
    line-height: 200rpx;
    color: rgba(153,153,153,1);
}

.againBtn {
    background-color: #fff;
    color: #30ad37;
    border-top: 1rpx solid #F2F2F2;
}