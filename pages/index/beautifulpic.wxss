.beautifulpic {
    position: relative;
    min-height: 100vh;
    width: 100%;
}

.swiper {
    width: 100%;
}

.swiperItem {
    width: 100%;
    height: 100%;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.footerDot {
    height: 14rpx;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 328rpx;
    display: flex;
    padding-left: 10rpx;
    justify-content: space-around;
}

.dot {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    margin-right: 10rpx;
    background: rgba(255,255,255,0.30);
}

.activityDot {
    background-color: #fff;
}

.picFooter {
    width: 100%;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    background-color: #fff;
    text-align: center;
    padding-top: 40rpx;
    box-sizing: border-box;
    background: #f7f7f7;
}

.iconGroup {
    min-height: 188rpx;
    position: relative;
    overflow: unset;
}

.icon_save {
    width: 108rpx;
    height: 108rpx;
    margin: 0rpx auto;
}

.saveText {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #666;
}

.cancelBtn {
    border-top: 1rpx solid #f7f7f7;
    font-size: 38rpx;
    line-height: 88rpx;
    height: 88rpx;
    color: #333;
    background-color: #fff;
}