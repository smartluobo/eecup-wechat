.introduce {
    background-color: #fff;
}

.imgIntroduce {
    background: url('https://www.eecup.cn/tea/image/eecup/icon/index/inviter_zhangzhen.jpg') no-repeat;
    background-size: 100%;
    height: 520rpx;
}

.btnGroup {
    display: flex;
    justify-content: space-around;
    padding: 0rpx 100rpx;
}

.friendBox {
    width: 672rpx;
    height: 368rpx;
    background-color: #fff;
    box-shadow: 1rpx 2rpx 8rpx 0rpx rgba(13,5,9,0.24);
    border-radius: 7rpx;
    margin: 0rpx auto;
    text-align: center;
}

.friendTitle {
    font-family: NotoSansHans-DemiLight;
    font-size: 40rpx;
    line-height: 40rpx;
    color: #2e2e2e;
    padding-top: 65rpx;
}

.friendSubTitle {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #666;
    margin: 17rpx auto 48rpx auto;
}

.iconWxFriend,.iconProductPic {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 10rpx;
    background: url('https://www.eecup.cn/tea/image/eecup/icon/index/wechat_friend.png') no-repeat;
    background-size: contain;
    border-radius: 50%;
    padding: 0rpx;
}

.iconProductPic {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 10rpx;
    background: url('https://www.eecup.cn/tea/image/eecup/icon/index/pic_product.png') no-repeat;
    background-size: contain;
    border-radius: 50%;
    padding: 0rpx;
}

.iconWxFriend::after {
    content: none;
}

.friendText {
    font-size: 24rpx;
    line-height: 24rpx;
    color: #666;
}

.getBox {
    margin-top: 100rpx;
}

.introductionTitle {
    font-family: NotoSansHans-DemiLight;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #000;
    margin: 0rpx auto;
    width: 112rpx;
    display: block;
    position: relative;
}

.introductionTitle::before {
    content: ' ';
    width: 64rpx;
    height: 2rpx;
    background-color: #ccc;
    position: absolute;
    left: -87rpx;
    top: 13rpx;
}

.introductionTitle::after {
    content: ' ';
    width: 64rpx;
    height: 2rpx;
    background-color: #ccc;
    position: absolute;
    left: 135rpx;
    top: 13rpx;
}

.noGet {
    font-family: NotoSansHans-DemiLight;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #a3a3a3;
    text-align: center;
    margin: 35rpx;
}

.get {
    width: 100%;
    font-family: NotoSansHans-DemiLight;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #999;
    text-align: center;
    margin: 35rpx auto 0rpx auto;
}

.getColor {
    color: #e06e11;
}

.getFriend {
    display: flex;
    justify-content: space-between;
    padding: 0rpx 30rpx;
    margin-top: 30rpx;
    height: 80rpx;
    font-size: 28rpx;
    color: #666;
    line-height: 80rpx;
}

.iconFriend {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.friendName {
    vertical-align: top;
    display: inline-block;
    max-width: 350rpx;
}

.splitBar {
    width: 100%;
    height: 20rpx;
    background-color: #f7f7f7;
    margin-top: 65rpx;
}

.activeTitle {
    margin-top: 60rpx;
}

.iconOpen {
    width: 50rpx;
    height: 52rpx;
    margin: 22rpx auto 20rpx auto;
    display: block;
}

.activeRule {
    padding: 30rpx 40rpx;
    font-size: 28rpx;
    color: #666;
}

.iconClose {
    width: 50rpx;
    height: 52rpx;
    margin: 0rpx auto 36rpx auto;
    display: block;
}