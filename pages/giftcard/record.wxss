.giftRecord {
    width: 100%;
    height: 100vh;
    background: #fbfbfb;
    font-family: PingFangSC-Medium;
}

.giftNav {
    width: 100%;
    background-color: #fff;
    height: 98rpx;
    line-height: 98rpx;
    font-size: 28rpx;
}

.navItem {
    width: 33.333%;
    display: inline-block;
    text-align: center;
    position: relative;
}

.checkedNav {
    color: #f2cba4;
}

.sendingTip {
    position: absolute;
    left: 85rpx;
    top: 30rpx;
    font-size: 20rpx;
    color: #999;
}

.giftWarp {
    width: 100%;
    margin-top: 10rpx;
    display: block;
}

.giftItem {
    width: 100%;
    height: 320rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
}

.giftBox {
    margin: 0rpx 30rpx 0rpx 24rpx;
    display: block;
}

.imgBox {
    width: 252rpx;
    height: 158rpx;
    position: relative;
    display: inline-block;
    margin: 30rpx 0rpx 27rpx 0rpx;
}

.giftImg {
    width: 252rpx;
    height: 158rpx;
    border-radius: 10rpx;
}

.imgTip {
    width: 96rpx;
    height: 44rpx;
    opacity: 0.65;
    background: #000;
    color: #fff;
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    line-height: 44rpx;
    text-align: center;
    border-top-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
}

.wordBox {
    display: inline-block;
    vertical-align: top;
    margin: 30rpx 0rpx 27rpx 30rpx;
}

.friendSize {
    color: #2a2a2a;
    display: inline-block;
    font-size: 24rpx;
}

.giftTime {
    line-height: 34rpx;
    font-size: 24rpx;
    color: #999;
}

.giftWish {
    font-size: 26rpx;
    width: 414rpx;
    height: 108rpx;
    margin-top: 8rpx;
    line-height: 36rpx;
    font-weight: normal;
    color: #333;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.line {
    width: 100%;
    height: 2rpx;
    background-image: linear-gradient(to right,#ccc 0%,#ccc 50%,transparent 50%);
    background-size: 16rpx 2rpx;
    background-repeat: repeat-x;
}

.bottomBox {
    display: flex;
    justify-content: space-between;
}

.cancelBtn {
    margin-top: 23rpx;
    width: 252rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border-radius: 6rpx;
    border-color: #f2cba4;
    font-size: 28rpx;
    color: #f2cba4;
    background-color: #fff;
    display: block;
    border: 2rpx solid #f2cba4;
}

.deatilBtn {
    margin: 39rpx 34rpx auto 0rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #666;
    position: relative;
}

.arrowsLeft {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 4rpx;
    right: -34rpx;
}

.friend {
    font-size: 24rpx;
    line-height: 34rpx;
    color: #999;
    margin-top: 39rpx;
}

.not_card_img {
    display: block;
    width: 148rpx;
    height: 148rpx;
    margin: 180rpx auto 40rpx;
}

.not_txt {
    text-align: center;
    font-size: 26rpx;
    line-height: 36rpx;
    color: #666;
}