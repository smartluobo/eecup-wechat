.invoiceDetail {
    min-height: 100vh;
    background: #fbfbfb;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    position: relative;
}

.listItem {
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    background-color: #fff;
    padding: 0rpx 30rpx;
    border-top: 1rpx solid rgba(229,229,229,0.3);
}

.total {
    background-color: #fbfbfb;
}

.listItem>view {
    display: inline-block;
}

.leftName {
    margin-right: 50rpx;
}

.rightValue {
    color: #666;
    min-width: 400rpx;
}

.invoiceType>.rightValue {
    min-width: 300rpx;
}

.preInvoice {
    margin-left: 10rpx;
    width: 215rpx;
    position: relative;
}

.preInvoice::after {
    content: ' ';
    width: 16rpx;
    height: 16rpx;
    border-right: 3rpx solid #d8d8d8;
    border-top: 3rpx solid #d8d8d8;
    position: absolute;
    right: 20rpx;
    top: 42rpx;
    transform: rotate(45deg);
}

.emailItem {
    margin-top: 24rpx;
}

.blueColor {
    color: #f2cba4;
}

.dialogWarp {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.50);
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 2;
}

.dialogContent {
    width: 100%;
    background: #fff;
    position: fixed;
    z-index: 3;
    bottom: 0rpx;
    overflow: hidden;
}

.title {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-top: 26rpx;
    padding-bottom: 23rpx;
    border-bottom: 1rpx solid rgba(229,229,229,0.3);
}

.emailName {
    display: inline-block;
    margin: 69rpx 24rpx auto 30rpx;
}

.emailInput {
    width: 546rpx;
    height: 84rpx;
    display: inline-block;
    border-radius: 6rpx;
    border: 1rpx solid rgba(229,229,229,0.3);
    margin-top: 45rpx;
    vertical-align: top;
    text-align: center;
}

.reSubmitFoot {
    width: 100%;
    border-top: 1rpx solid rgba(229,229,229,0.3);
    background-color: #fff;
    position: fixed;
    z-index: 1;
    bottom: 0rpx;
    left: 0rpx;
}

.ipxBox {
    width: 100%;
    height: 50rpx;
    display: block;
}

.submitBtn {
    width: 690rpx;
    height: 84rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 84rpx;
    color: #fff;
    background: #bdd3e8;
    border-radius: 3px;
    margin: 16rpx auto;
    margin-top: 40rpx;
}

.againBtn {
    width: 690rpx;
    height: 84rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 84rpx;
    color: #fff;
    background: #f2cba4;
    border-radius: 3px;
    margin: 16rpx auto;
}

.doSubmit {
    background-color: #f2cba4;
}