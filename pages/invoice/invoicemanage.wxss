.invoiceManage {
    min-height: 100vh;
    background: #fbfbfb;
    position: relative;
    box-sizing: border-box;
}

.manageContent {
    border-top: 1rpx solid rgba(229,229,229,0.3);
    background-color: #fff;
}

.manageList {
    font-family: PingFangSC-Regular;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid rgba(229,229,229,0.3);
    background: #fff;
    position: relative;
    font-size: 30rpx;
    color: #333;
}

.manageList::after {
    content: ' ';
    width: 16rpx;
    height: 16rpx;
    border-right: 3rpx solid #e5e5e5;
    border-top: 3rpx solid #e5e5e5;
    position: absolute;
    right: 32rpx;
    top: 42rpx;
    transform: rotate(45deg);
}

.noBorder {
    border-bottom: none;
}