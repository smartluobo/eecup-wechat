.headEdit {
    font-family: PingFangSC-Regular;
    width: 100%;
    min-height: 100vh;
    background: #fbfbfb;
    box-sizing: border-box;
    overflow-x: hidden;
}

.listItem {
    width: 100%;
    height: 106rpx;
    line-height: 106rpx;
    background-color: #fff;
    border-top: 1rpx solid rgba(229,229,229,0.2);
    display: flex;
    padding: 0rpx 30rpx;
}

.leftName {
    font-size: 30rpx;
    width: 144rpx;
    margin-right: 26rpx;
}

.rightValue {
    min-width: 520rpx;
    font-size: 28rpx;
    color: #666;
    position: relative;
}

.rightValue input {
    width: 500rpx;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 33rpx;
    color: #333;
}

.identityNo {
    font-size: 24rpx;
    line-height: 106rpx;
}

.checkBox {
    margin-top: 18rpx;
    position: relative;
    font-size: 0rpx;
    display: flex;
}

.check {
    width: 28rpx;
    height: 28rpx;
    border: 1rpx solid #f2cba4;
    display: inline-block;
    border-radius: 6rpx;
    margin: 0rpx 10rpx auto 30rpx;
}

.checked {
    background-color: #f2cba4;
    position: relative;
}

.checked::after {
    content: ' ';
    width: 16rpx;
    height: 6rpx;
    position: absolute;
    left: 5rpx;
    top: 9rpx;
    border-right: 3rpx solid #fff;
    border-top: 3rpx solid #fff;
    transform: rotate(135deg);
}

.checkText {
    display: inline-block;
    font-size: 22rpx;
    margin-top: 2rpx;
}

.invoiceFoot {
    width: 100%;
    border-top: 1rpx solid rgba(229,229,229,0.2);
    position: fixed;
    bottom: 0rpx;
    background: #fff;
    box-shadow: 0 -1px 5px 0 rgba(0,0,0,0.05);
    overflow: hidden;
    z-index: 1;
}

.ipxBox {
    width: 100%;
    height: 50rpx;
    display: block;
}

.editFoot {
    display: flex;
    justify-content: space-between;
}

.submitBtn {
    width: 330rpx;
    height: 84rpx;
    background: #bdd3e8;
    border-radius: 6rpx;
    font-size: 30rpx;
    color: #fff;
    line-height: 84rpx;
    text-align: center;
    margin: 16rpx 30rpx 16rpx auto;
}

.saveBtn {
    width: 690rpx;
}

.canSubmit {
    background-color: #f2cba4;
}

.cancelBtn {
    width: 330rpx;
    height: 84rpx;
    border: 1rpx solid #f2cba4;
    border-radius: 6rpx;
    line-height: 84rpx;
    text-align: center;
    margin: 16rpx 0rpx 16rpx 30rpx;
    color: #f2cba4;
    font-size: 30rpx;
}